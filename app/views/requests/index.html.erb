<div>
  <div>
    <h1>
      List of all requests
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new request
    </h2>

    <form action="/insert_request" method="post">
      <div>
        <label for="request_date_box">
          Request date
        </label>

        <input type="date" id="request_date_box" name="query_request_date">
      </div>

      <div>
        <label for="request_start_time_box">
          Request start time
        </label>

        <input type="time" id="request_start_time_box" name="query_request_start_time">
      </div>

      <div>
        <label for="request_end_time_box">
          Request end time
        </label>

        <input type="time" id="request_end_time_box" name="query_request_end_time">
      </div>

      <div>
        <label for="request_location_box">
          Request location
        </label>

        <input type="text" id="request_location_box" name="query_request_location">
      </div>

      <div>
        <label for="request_street_address_box">
          Request street address
        </label>

        <input type="text" id="request_street_address_box" name="query_request_street_address">
      </div>

      <div>
        <label for="request_city_box">
          Request city
        </label>

        <input type="text" id="request_city_box" name="query_request_city">
      </div>

      <div>
        <label for="request_state_box">
          Request state
        </label>

        <input type="text" id="request_state_box" name="query_request_state">
      </div>

      <div>
        <label for="request_country_box">
          Request country
        </label>

        <input type="text" id="request_country_box" name="query_request_country">
      </div>

      <div>
        <label for="request_postal_code_box">
          Request postal code
        </label>

        <input type="text" id="request_postal_code_box" name="query_request_postal_code">
      </div>

      <div>
        <label for="request_parking_location_box">
          Request parking location
        </label>

        <input type="text" id="request_parking_location_box" name="query_request_parking_location">
      </div>

      <div>
        <label for="request_meeting_location_box">
          Request meeting location
        </label>

        <input type="text" id="request_meeting_location_box" name="query_request_meeting_location">
      </div>

      <div>
        <input type="checkbox" id="request_pet_box" name="query_request_pet" value="1">

        <label for="request_pet_box">Request pet</label>
      </div>

      <div>
        <label for="request_gender_preference_box">
          Request gender preference
        </label>

        <input type="text" id="request_gender_preference_box" name="query_request_gender_preference">
      </div>

      <div>
        <label for="request_comments_box">
          Request comments
        </label>

        <input type="text" id="request_comments_box" name="query_request_comments">
      </div>

      <div>
        <label for="request_amount_box">
          Request amount
        </label>

        <input type="text" id="request_amount_box" name="query_request_amount">
      </div>

      <div>
        <label for="request_status_box">
          Request status
        </label>

        <input type="text" id="request_status_box" name="query_request_status">
      </div>

      <div>
        <label for="requestor_id_box">
          Requestor
        </label>

        <input type="text" id="requestor_id_box" name="query_requestor_id">
      </div>

      <div>
        <label for="provider_id_box">
          Provider
        </label>

        <input type="text" id="provider_id_box" name="query_provider_id">
      </div>

      <button>
        Create request
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Request date
        </th>

        <th>
          Request start time
        </th>

        <th>
          Request end time
        </th>

        <th>
          Request location
        </th>

        <th>
          Request street address
        </th>

        <th>
          Request city
        </th>

        <th>
          Request state
        </th>

        <th>
          Request country
        </th>

        <th>
          Request postal code
        </th>

        <th>
          Request parking location
        </th>

        <th>
          Request meeting location
        </th>

        <th>
          Request pet
        </th>

        <th>
          Request gender preference
        </th>

        <th>
          Request comments
        </th>

        <th>
          Request amount
        </th>

        <th>
          Request status
        </th>

        <th>
          Requestor
        </th>

        <th>
          Provider
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_requests.each do |a_request| %>
      <tr>
        <td>
          <%= a_request.id %>
        </td>

        <td>
          <%= a_request.request_date %>
        </td>

        <td>
          <%= a_request.request_start_time %>
        </td>

        <td>
          <%= a_request.request_end_time %>
        </td>

        <td>
          <%= a_request.request_location %>
        </td>

        <td>
          <%= a_request.request_street_address %>
        </td>

        <td>
          <%= a_request.request_city %>
        </td>

        <td>
          <%= a_request.request_state %>
        </td>

        <td>
          <%= a_request.request_country %>
        </td>

        <td>
          <%= a_request.request_postal_code %>
        </td>

        <td>
          <%= a_request.request_parking_location %>
        </td>

        <td>
          <%= a_request.request_meeting_location %>
        </td>

        <td>
          <%= a_request.request_pet %>
        </td>

        <td>
          <%= a_request.request_gender_preference %>
        </td>

        <td>
          <%= a_request.request_comments %>
        </td>

        <td>
          <%= a_request.request_amount %>
        </td>

        <td>
          <%= a_request.request_status %>
        </td>

        <td>
          <%= a_request.requestor_id %>
        </td>

        <td>
          <%= a_request.provider_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_request.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_request.updated_at) %> ago
        </td>

        <td>
          <a href="/requests/<%= a_request.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
